<mvc:View xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" controllerName="zn11_expense.controller.manBudget" height="100%"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:commons="sap.ui.commons" class="sapUiSizeCompact"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:tnt="sap.tnt" xmlns="sap.m">
	<OverflowToolbar>
		<Button icon="sap-icon://paper-plane" text="Approve" type="Accept" press="approveAction">
			<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
		</Button>
		<Button icon="sap-icon://sys-cancel" text="Reject" type="Reject" press="rejectAction">
			<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
		</Button>
		<Button text="Tasks" press="taskAction">
			<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
		</Button>
	</OverflowToolbar>
	<IconTabBar class="sapUiResponsiveContentPadding" expanded="{device]/isNoPhone}">
		<items>
			<IconTabFilter text="DOCUMENT">
				<Button icon="sap-icon://print" text="Print the document" press="onPdfExport"/>
				<Button icon="sap-icon://notes" text="Notes"/>
				<Button icon="sap-icon://save" press="onSaveChange" text="Save Changes"/>
				<Panel class="sapUiSmallMargin panelContainer generalLabelFont generalLabelFontUi" width="95%">
					<headerToolbar>
						<Toolbar class="box-header">
							<core:Icon class="size1 icon-shadow" color="#FFF" src="sap-icon://user-edit"/>
							<Title class="approvalText" text="Budget Approval"/>
						</Toolbar>
					</headerToolbar>
					<content>
						<Panel class="panelBottom" id="ManpanelFirs" width="auto" expandeble="false">
							<content>
								<ImageContent class="imageLogo" src="img/logo-n11-large.png"></ImageContent>
							</content>
						</Panel>
						<Panel class="panelBottom" id="ManpanelFirstContainerBudget" width="auto">
							<headerToolbar>
								<Toolbar height="3rem">
									<Title class="boldText" text="Form Details"/>
									<!--<ImageContent class="imageLogo" src="img/n11_logo.png"></ImageContent>-->
								</Toolbar>
							</headerToolbar>
							<content>
								<VBox class="sapUiSmallMargin">
									<f:SimpleForm columnsXL="3" emptySpanM="0" columnsM="2" columnsL="2" editable="true" emptySpanL="0" emptySpanXL="0" labelSpanL="4"
										labelSpanM="4" labelSpanXL="4" layout="ResponsiveGridLayout" maxContainerCols="3">
										<f:content>
											<core:Title/>
											<Label text="Request Owner"/>
											<Input class="inputForm" value="" id="ManrequestOwner" enabled="false"/>
											<Label text="Department"/>
											<Input class="inputForm" value="" id="Mandepartment" enabled="false"/>
											<Label text="Title"/>
											<Input class="inputForm" value="" id="Mantitle" enabled="false"/>
											<core:Title/>
											<Label text="Request Number"/>
											<Input class="inputForm" value="" id="ManrequestNum" enabled="false"/>
											<Label text="Request Date"/>
											<Input class="inputForm" value="" id="ManrequestDate" enabled="false"/>
											<HBox>
												<Input class="inputForm" value="" id="ManrequestTime" enabled="false"/>
											</HBox>
											<Label text="Status"/>
											<Input class="inputForm" value="{Status}" id="Manstatus" enabled="false"/>
										</f:content>
									</f:SimpleForm>
								</VBox>
							</content>
						</Panel>
						<Panel class="panelBottom" id="ManpanelSecondContainerBudget" showCollapseIcon="true" width="auto">
							<headerToolbar>
								<Toolbar height="3rem">
									<Title class="boldText" text="Budget Details"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<VBox class="sapUiSmallMargin">
									<f:SimpleForm editable="true" layout="ResponsiveGridLayout">
										<f:content>
											<core:Title/>
											<Label text="Period Start/End"/>
											<DatePicker class="inputForm" id="ManperiodStart" value="" enabled="false"/>
											<DatePicker class="inputForm" id="ManperiodEnd" value="" enabled="false"/>
											<Label text="Supplier"/>
											<Input class="inputForm" value="" id="Mansupplier" enabled="false"/>
											<Label text="Subject"/>
											<TextArea class="inputTextArea" value="" id="Mansubject" enabled="false"/>
											<Label text="Budget Allocation"/>
											<Select id="ManidBudget" forceSelection="false" items="{ path: 'budgetModel>/'}" change="selectChange" enabled="false">
												<core:Item key="" text="{path:'budgetModel>STRING', formatter: '.setFormat'}" id="ManidText"/>
											</Select>
											<Label text="Department"/>
											<Input class="inputForm" value="" id="ManidDepartment" enabled="false"/>
											<Label text="Type"/>
											<Input class="inputForm" value="" id="ManidType" enabled="false"/>
											<Label text="Description"/>
											<Input class="inputForm" value="" id="ManidDesc" enabled="false"/>
											<Label text="Sub.Description"/>
											<Input class="inputForm" value="" id="ManidSubDesc" enabled="false"/>
											<Label text="Rem.Budget Amount"/>
											<Input class="inputForm" value="" id="ManremBudget" enabled="false"/>
											<Label text="Purpose"/>
											<TextArea class="inputTextArea" value="" id="Manpurpose" enabled="false"/>
											<Label text="Explanation"/>
											<TextArea class="inputTextArea" value="" id="Manexplanation" enabled="false"/>
											<Label text=""/>
											<RadioButtonGroup class="sapUiMediumMarginBottom" id="ManformType" columns="5">
												<buttons>
													<RadioButton id="ManRB3-1" text="Related Party" key="Related Party" enabled="false"/>
													<RadioButton id="ManRB3-2" text="Donation" key="Donation" enabled="false"/>
													<RadioButton id="ManRB3-3" text="Domestic Education" key="Domestic Education" enabled="false"/>
													<RadioButton id="ManRB3-4" text="Abroad Education" key="Abroad Education" enabled="false"/>
													<RadioButton id="ManRB3-5" text="Business Trip" key="Business Trip" enabled="false"/>
													<RadioButton id="ManRB3-6" text="Others" key="Others" enabled="false"/>
												</buttons>
											</RadioButtonGroup>
											<Label text="Related Party"/>
											<Select width="100%" enabled="false" id="ManrelatedParty" visible="false">
												<items>
													<core:Item text="" key="relatedParty" enabled="false"/>
												</items>
											</Select>
											<Label text="B&amp;R Explanation"/>
											<TextArea class="inputTextArea" value="" id="ManbrExp" enabled="false"/>
											<Label text="Type here"/>
										</f:content>
									</f:SimpleForm>
								</VBox>
							</content>
						</Panel>
						<Panel class="panelBottom" id="ManpanelThirdContainerBudget" width="auto">
							<headerToolbar>
								<Toolbar height="3rem">
									<Title class="boldText" text="Budget Amount"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<VBox class="sapUiSmallMargin">
									<f:SimpleForm id="ManSimpleFormChange354" editable="true" layout="ResponsiveGridLayout">
										<f:content>
											<core:Title/>
											<Label text="Currency"/>
											<Select class="labelCurrency" id="ManCurrencyType" change="selectChangeCur" enabled="false">
												<items>
													<core:Item text="" key=""/>
													<core:Item text="TRY" key="TRY"/>
													<core:Item text="USD" key="USD"/>
													<core:Item text="EUR" key="EUR"/>
												</items>
											</Select>
											<Input class="inputCurr" value="" id="Mancurrency" enabled="false"></Input>
											<Label text="Total Amount"/>
											<Input class="inputForm" value="" id="MantotalAmount" enabled="false"/>
											<HBox>
												<Label class="labelExc" text="(Exc.VAT)"/>
											</HBox><Label text="Installments"/>
											<Table id="ManmainViewTbl" inset="false" items="{ path: '/results', sorter: { path: 'rowNumber' } }">
												<columns>
													<Column width="3rem">
														<Text text="#"/>
													</Column>
													<Column demandPopin="true" minScreenWidth="Tablet" width="10rem">
														<Text text="Month"/>
													</Column>
													<Column demandPopin="true" hAlign="Right" minScreenWidth="Tablet" width="15rem">
														<Text text="Installment Amount"/>
													</Column>
													<Column demandPopin="true" hAlign="Right" minScreenWidth="Tablet">
														<Text text=""/>
													</Column>
												</columns>
												<items>
													<ColumnListItem>
														<cells>
															<Text text="{rowNumber}"/>
															<Text text="{Month}"/>
															<Text text="{InstallmentAmount}"/>
														</cells>
													</ColumnListItem>
												</items>
											</Table>
											<!--<List delete="handleDelete" enableBusyIndicator="true" growing="true" headerText="Users" id="addList1" mode="Delete"></List>-->
											<Label text="Total Amount"/>
											<Input class="inputForm" value="" editable="false" id="ManidTotalAmount" enabled="false"/>
											<Input class="inputForm" value="" id="MantotalCurrAmount" enabled="false"/>
											<HBox>
												<Label class="labelPay" id="ManidTRY1" text="TRY"/>
												<Label class="labelExc" text="(Exc.VAT)"/>
											</HBox>
										</f:content>
									</f:SimpleForm>
								</VBox>
							</content>
						</Panel>
						<Panel class="panelBottom" id="ManpanelFourthContainerBudget" width="auto">
							<headerToolbar>
								<Toolbar height="3rem">
									<Title class="boldText" text="Attachment"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<Button ariaDescribedBy="defaultButtonDescription genericButtonDescription" press="onPress" text="Add">
									<layoutData>
										<FlexItemData growFactor="1"/>
									</layoutData>
								</Button>
							</content>
						</Panel>
					</content>
				</Panel>
				<!--	<Button icon="sap-icon://print" text="Print the document"/>
				<Button icon="sap-icon://notes" text="Notes"/>
				<Button icon="sap-icon://save" text="Save Changes"/>-->
			</IconTabFilter>
			<IconTabFilter text="FLOW">
				<List headerText="A List" showSeparators="Inner"></List>
			</IconTabFilter>
			<IconTabFilter text="MESSAGES">
				<Button icon="sap-icon://add" press="onAddMessageDialogPress" text="Add Message" id="ManidClick"/>
				<Table id="ManidBudgetMessage" inset="false" items="{ path: '/ProductCollection', sorter: { path: 'Name' } }">
					<columns>
						<Column width="12em">
							<Text text="Send Name"/>
						</Column>
						<Column width="12em">
							<Text text="Send Date"/>
						</Column>
						<Column width="12em">
							<Text text="Subject"/>
						</Column>
						<Column width="12em">
							<Text text="Message"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{SendName}"/>
								<Text text="{SendDate}"/>
								<Text text="{Subject}"/>
								<Text text="{Message}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</IconTabFilter>
		</items>
	</IconTabBar>
	<OverflowToolbar>
		<Button icon="sap-icon://paper-plane" text="Approve" type="Accept" press="approveAction">
			<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
		</Button>
		<Button icon="sap-icon://sys-cancel" text="Reject" type="Reject" press="rejectAction">
			<layoutData><OverflowToolbarLayoutData moveToOverflow="false"/></layoutData>
		</Button>
	</OverflowToolbar>
</mvc:View>